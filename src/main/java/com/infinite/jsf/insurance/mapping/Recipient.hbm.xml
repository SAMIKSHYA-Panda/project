<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.infinite.jsf.insurance.model.Recipient" table="recipient">
        <id name="hId" column="h_id" type="string">
            <generator class="assigned"/>
        </id>

        <property name="firstName" column="first_name" type="string"/>
        <property name="lastName" column="last_name" type="string"/>
        <property name="mobile" column="mobile" type="string"/>
        <property name="userName" column="user_name" type="string"/>
        <property name="gender" column="gender" type="string"/>
        <property name="dob" column="dob" type="date"/>
        <property name="address" column="address" type="string"/>
        <property name="createdAt" column="created_at" type="timestamp"/>
        <property name="password" column="password" type="string"/>
        <property name="email" column="email" type="string"/>
        <property name="status" column="status" type="string"/>
        
        <set name="subscriptions" inverse="true" cascade="all">
            <!-- foreign key column in Subscription table referencing Recipient -->
            <key column="h_id"/>
            <one-to-many class="com.infinite.jsf.insurance.model.Subscription"/>
        </set>
    </class>
</hibernate-mapping>



